/* pages/demo/main.wxss */

.root-container {
  display: flex;
  background: #fff;
  flex-direction: column;
  padding-bottom: 50rpx;
}

.title-container {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  background: #fefefe;
  margin-bottom: 5rpx;
  border-bottom: 2rpx solid #eeeeee;
  border-top: 2rpx solid #eeeeee;
}

.title-text {
  font-size: 25rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  border: 1rpx solid #eeeeee;
  width: 100rpx;
  height: 100rpx;
}

.title-text:active {
  background: #eeeeee;
}

.title-title {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 5;
}

.gride-container {
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
  background: #eeeeee;
}

.gride-item {
  margin: 2rpx;
  align-self: center;
  display: flex;
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  justify-content: center;
  align-items: center;
}

.gride-item:active {
  background: #eeccaa;
}

.gride-item.select {
  background: #eeccaa
}

.week-container {
  margin-top: 10rpx;
  background: #fefefe;
  display: flex;
  height: 70rpx;
  justify-content: space-around;
  align-items: center;
}

.week-item {
  display: flex;
}

.date-picker {
  width: 100%;
  height: 100rpx;
}
